{
	"name": "Rust Wayland Dev",
	"dockerComposeFile": "../docker/docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspaces",
	"remoteUser": "root",
	"customizations": {
		"vscode": {
			"extensions": [
				"rust-lang.rust-analyzer",
				"tamasfe.even-better-toml",
				"serayuzgur.crates",
				"mhutchie.git-graph",
				"usernamehw.errorlens",
				"vadimcn.vscode-lldb",
				"Angular.ng-template",
				"esbenp.prettier-vscode",
				"dbaeumer.vscode-eslint"
			]
		}
	},
	"containerEnv": { "CARGO_TERM_COLOR": "always" },
	"forwardPorts": [8081, 6333, 6334, 27017],
	"portsAttributes": {
		"8081": {
			"label": "Mongo Express",
			"onAutoForward": "openBrowser"
		},
		"6333": {
			"label": "Qdrant Dashboard",
			"onAutoForward": "openBrowser"
		},
		"6334": {
			"label": "Qdrant gRPC"
		},
		"27017": {
			"label": "MongoDB"
		}
	},
	"postCreateCommand": "rustup default stable && rustup component add rustfmt clippy && cargo --version && cargo install rustlings"
}
