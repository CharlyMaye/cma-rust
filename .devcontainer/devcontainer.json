{
	"name": "Rust Wayland Dev",
  	"build": {
		"dockerfile": "../docker/dev.Dockerfile",
		"context": ".."
  	},
	"remoteUser": "root",
	"customizations": {
		"vscode": {
			"extensions": [
				"rust-lang.rust-analyzer",
				"tamasfe.even-better-toml",
				"serayuzgur.crates",
				"mhutchie.git-graph",
				"usernamehw.errorlens",
				"vadimcn.vscode-lldb"
			]
		}
	},
	"containerEnv": { "CARGO_TERM_COLOR": "always" },
	"postCreateCommand": "rustup default stable && rustup component add rustfmt clippy && cargo --version && cargo install rustlings"
}
